<div ="container">
<h2>Edit your question</h2>
  <%= erb :'_errors' %>

<form action='/questions/<%= @question.id %>' method ='post'>
  <input type="hidden" name="_method" value="put">
  <div class="form-group row">
  <label for='question_title' class="col-sm-2 col-form-label">Question Title</label>
  <div class="col-sm-10"><input type="text" name ="question[title]" value ="<%= @question.title %>"></div>
  </div>
  <div class="form-group row">
  <label for="question_text" class="col-sm-2 col-form-label">Question Text</label>
  <div class="col-sm-10"><textarea type="text" name="question[text]" placeholder ="<%= @question.text %>"></textarea></div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2">
    </div>
    <div class="col-sm-4">
      <input type="submit" value ="Update your question">
    </div>
  </div>
</form>

</div>
